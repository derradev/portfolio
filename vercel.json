{
  "version": 2,
  "name": "william-malone-portfolio",
  "builds": [
    {
      "src": "packages/frontend/",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "packages/backend/",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "dist/**"
      }
    },
    {
      "src": "packages/admin/",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/backend/src/index.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/admin/(.*)",
      "dest": "packages/admin/index.html",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "packages/frontend/index.html",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    }
  ],
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "@supabase_url",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@supabase_anon_key",
    "NEXT_PUBLIC_API_URL": "@api_url",
    "NEXT_PUBLIC_DOMAIN": "@domain",
    "NEXT_PUBLIC_API_DOMAIN": "@api_domain",
    "NEXT_PUBLIC_ADMIN_DOMAIN": "@admin_domain"
  },
  "functions": {
    "packages/backend/src/index.ts": {
      "maxDuration": 30,
      "runtime": "nodejs18.x"
    }
  },
  "regions": ["lhr1"],
  "framework": "nextjs"
}
